#CXX = /bgsys/drivers/ppcfloor/comm/bin/gcc/mpic++
#CXXFLAGS = -O2 -dynamic

CXX = /software/tamusc/bgsys/MPICH2/1.5-GCC-4.8.4/bin/mpic++
CXXLINK1 = -dynamic -Wl,-dynamic-linker=/software/tamusc/bgsys/GCC/4.8.4/powerpc64-bgq-linux/lib/ld64.so.1
CXXLINK2 = -Wl,-rpath=/software/tamusc/bgsys/GCC/4.8.4/powerpc64-bgq-linux/lib

CXXFLAGS = -O2 -std=c++11 $(CXXLINK1) $(CXXLINK2)

all: tamulauncher

tamulauncher: tamulauncher-loadbalanced.cpp
	$(CXX) $(CXXFLAGS) tamulauncher-loadbalanced.cpp -o tamulauncher -ldl

install: tamulauncher
	mv tamulauncher ../bin/

clean:
	rm tamulauncher